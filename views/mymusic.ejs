  <style>
    html,
    body {
      overflow-x: hidden;
    }

    #my-nav {
      margin-bottom: 40px;
      display: flex;
      flex-direction: column;
      box-shadow: 0px 1px 10px #999;
      padding: 10px 0;
    }

    .nav-first-row {
      display: flex;
      flex-direction: row;
      justify-content: space-around;
    }

    .nav-second-row {
      display: flex;
      flex-direction: row;
      justify-content: center;
      width: 100%;
    }

    #nav-heading {
      font-family: 'Indie Flower', cursive;
      font-size: 30px;
    }

    #search-artist {
      width: 20%;
    }

    .close-btn {
      position: absolute;
      right: 12px;
      top: 8px;
      font-size: 20px;
      cursor: pointer;
      padding: 2px 12px;
      border-radius: 50%;
      background-color: #ddd;
      opacity: 0.6;
      transition: all 100ms ease;
    }

    .close-btn:hover {
      opacity: 0.9;
    }


    .side-menu {
      position: fixed;
      z-index: 2;
      background-color: #eee;
      width: 300px;
      height: 100%;
      right: -300px;
      transition: all 400ms ease;
      transform: translateZ(0);
    }

    .side-open .side-menu {
      right: 0;
    }

    .artist-side-profile p {
      padding-left: 6px;

    }

    .artist-side-profile img {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }

    .circle-wrapper img {
      height: 64px;
      width: 64px;
      border-radius: 50%;
    }

    .top-artists-wrapper {
      cursor: pointer;
    }

    .artist-popularity,
    .track-popularity {
      display: inline-block;
      margin-left: 20px;
    }

    .played-at {
      margin-left: 20px;
    }

    .ui-autocomplete {
      max-height: 240px;
      background-color: #fff;
      overflow-y: auto;
      overflow-x: hidden;
      list-style: none;
      margin: 0;
      padding: 0;
      cursor: pointer;
      box-shadow: 1px 1px 10px #999;

    }

    .autocomplete-item {
      height: 60px;
      line-height: 60px;
      padding-left: 15px;
    }

    .ui-state-active {
      background: #eee;
    }

    .ui-helper-hidden-accessible {
      display: none;
    }

    .progress {
      width: 50%;
    }

    .genre-row {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }

    .genre-progress-bar {
      background-color: #1db954;
      color: white;
    }

    footer {
      height: 50px;
      text-align: center;
    }

    .footer-contact {
      padding-top: 1rem;
    }

    .footer-copyright {
      color: #999999;
    }

    .fab,
    .fas {
      opacity: 0.75;
      color: #999999;
      margin: 0 10px;
      transition: all 0.3s;
    }

    .fab:hover,
    .fas:hover {
      color: #1db954;
    }

    .footer-copyright {
      padding: 1rem 0 1rem 0;
    }

    @media (max-width: 768px) {
      #display-name {
        display: none;
      }

      #my-nav {
        align-items: center;
      }

      .nav-first-row {
        justify-content: space-between;
        width: 90%;
      }

      .nav-second-row {
        padding-top: 10px;
      }

    }

    @media (max-width: 600px) {
      .side-menu {
        overflow-y: scroll;
        width: 100%;
        right: -600px;
      }
    }
