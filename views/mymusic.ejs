<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Music</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <style>
    .circle-wrapper {
      width: 160px;
      height: 160px;
      border-radius: 50%;
      position: relative;
      overflow: hidden;
    }

    .artist-pic {
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <img id="profile-pic" src="<%= response[0].data.images[0].url %>" alt="display pic"
        style="width: 70px; border-radius: 50%; margin: 10px;">
      <h1 style="line-height: 200%;">Logged in as <span id="display-name"><%= response[0].data.display_name %></span>
      </h1>
    </div>
    <div class="row">
      <div class="col-md-4">
        <h3>Your Top 10 Artists</h3>
      </div>
      <div class="col-md-4">


        <div id="select-group" class="form-group">
          <label for="select-time">Select time period :</label>
          <select class="form-control" id="select-time">
            <option value="short_term">Last month</option>
            <option value="medium_term">Last 6 months</option>
            <option value="long_term">From the first day</option>
          </select>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12" id="my-top-artists">

      </div>
    </div>
  </div>



  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
  <script>
    $(function () {

      /**
         * Obtains parameters from the URL
         * @return Object
         */
      function getUrlVars() {
        var vars = [], hash;
        var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
        for (var i = 0; i < hashes.length; i++) {
          hash = hashes[i].split('=');
          vars.push(hash[0]);
          vars[hash[0]] = hash[1];
        }
        return vars;
      }

      const params = getUrlVars();

      const access_token = params.access_token,
        refresh_token = params.refresh_token,
        error = params.error;

      if (error) {
        alert('There was an error during the authentication');
      } else {
        if (access_token) {
          // render oauth info
          const options = {
            headers: { Authorization: "Bearer " + access_token },
            json: true
          };

          // Get Personal Profile
          async function getPersonalProfile() {
            try {
              const response = await fetch('https://api.spotify.com/v1/me', options);
              const data = await response.json();
            } catch (err) {
              console.log(err);
            }
          }

          async function getTopArtists(range) {
            try {
              const response = await fetch(
                `https://api.spotify.com/v1/me/top/artists/?limit=10&time_range=${range}`,
                options
              );
              const data = await response.json();
              console.log(data);
              $("#my-top-artists").empty();
              data.items.forEach((item, index) => {

                const val = `<div class="circle-wrapper"><img src=${item.images[2].url} alt=${item.name}></div>` +
                  `<p>${index + 1}. ${item.name}</p>`;
                $("#my-top-artists").append(val);
              });


            } catch (err) {
              console.log(err);
            }
          }

          // getPersonalProfile();

          // Default is long term
          getTopArtists($('#select-time').val());
          $('#select-time').change(() => {
            getTopArtists($('#select-time').val());
          })

        } else {
          // render initial screen
          window.location = "http://localhost:3000";
        }
      }
    })
  </script>
</body>

</html>